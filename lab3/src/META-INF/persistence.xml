<persistence
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        xmlns="http://java.sun.com/xml/ns/persistence"
        version="2.0">
    <persistence-unit name="postgresql-eclipselink" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>main.Dot</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="INSERT_PASSWORD"/>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/pg"/>-->
            <!--<property name="eclipselink.target-database" value="studs"/>-->
            <!--<property name="javax.persistence.jdbc.user" value="sssss"/>-->
            <!--<property name="javax.persistence.jdbc.password" value="INSERT_PASSWORD"/>-->
        </properties>
    </persistence-unit>
    <persistence-unit name="postgresql-eclipselink-helios" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>main.Dot</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://pg:5432/studs"/>
            <property name="javax.persistence.jdbc.user" value="ssssss"/>
            <property name="javax.persistence.jdbc.password" value="NSERT_PASSWORD"/>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>
</persistence>